<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>pl.sebastian.WelcomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>pl.sebastian.SecondServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Time</servlet-name>
        <servlet-class>pl.sebastian.Time</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/second</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Time</servlet-name>
        <url-pattern>/time</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>time</welcome-file>
    </welcome-file-list>

</web-app>
